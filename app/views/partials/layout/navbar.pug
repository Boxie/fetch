header(style='padding-bottom: 70px;')
  nav
    .nav-wrapper
      .row.scale-transition
        #logo.col.s1.m1
          a.brand-logo.left(href='/auth/login') Logo
        .col.s9.hide-on-small-only
          form
            .input-field
              input#search(type='search')
              |  
              label.label-icon(for='search')
                i.material-icons search
              |  
              i.material-icons close
        #login_btn.col.offset-s9.s2.m2
          ul.right
            li
              unless authenticated
                a.btn.waves-light.waves-effect(href='#login') Log In
              else
                a.btn.waves-light.waves-effect(href='/auth/logout') Log Out
    .nav-content.hide-on-med-and-up(style='background-color: #ee6e73;')
      form
        .input-field
          input#search(type='search')
          |  
          label.label-icon(for='search')
            i.material-icons search
          |  
          i.material-icons close

include modal.pug